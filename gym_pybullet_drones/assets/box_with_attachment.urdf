  </link>

  <joint name="attachment_1_joint" type="fixed">
    <parent link="box_link"/>
    <child link="attachment_1"/>
    <origin xyz="0.5 0.5 0.05" rpy="0 0 0"/>
  </joint>

  <joint name="attachment_2_joint" type="fixed">
    <parent link="box_link"/>
    <child link="attachment_2"/>
